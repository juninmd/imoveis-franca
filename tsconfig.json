{
  "ts-node": {
    "files": true
  },
  "types": [
    "node",
    "@types/jest"
  ],
  "compilerOptions": {
    "typeRoots": [
      "../node_modules/@types",
      "./src/types",
      "node_modules/@types"
    ],
    "target": "es2022",
    "module": "NodeNext",
    "lib": [
      "ES2022",
      "dom"
    ],
    "moduleResolution": "node16",
    "rootDir": "./",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false
  },
  "include": [
    "src/**/*",
    "__tests__/**/*",
    "jest.config.ts",
    "scripts/**/*"
  ]
}